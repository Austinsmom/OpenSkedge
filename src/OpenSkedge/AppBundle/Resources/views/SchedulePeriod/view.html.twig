{% extends 'OpenSkedgeBundle:Dashboard:index.html.twig' %}
{% block modulecontent %}
<div class="span12">
    <h3>Schedules for {{ entity }}</h3>

<table class="table table-condensed">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ schedule.id }}</td>
        </tr>
        <tr>
            <th>Position</th>
            <td>{{ schedule.position }}</td>
        </tr>
        <tr>
            <th>End Date</th>
            <td>{{ entity.endTime|date('M-d-Y') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('schedules') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('schedule_period_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('schedule_period_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
